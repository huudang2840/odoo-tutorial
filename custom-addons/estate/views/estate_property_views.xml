<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Action -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_estate_root" name="Estate" sequence="10" />
    <menuitem id="menu_estate_property" name="Properties"
        parent="menu_estate_root" action="action_estate_property" sequence="10" />

    <!-- Tree View -->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="state" />
                <field name="property_type_id" />
                <field name="bedrooms" />
                <field name="garden" />
                <field name="invoice_id" />
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="property_type_id" />
                            <field name="state" readonly="1" />
                            <field name="invoice_id" readonly="1" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="selling_price" readonly="1" />
                            <field name="bedrooms" />
                            <field name="garden" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Offers">
                            <!-- default_property_id để auto link offer với property -->
                            <field name="offer_ids" context="{'default_property_id': active_id}">
                                <tree editable="bottom">
                                    <field name="property_id" invisible="1" />

                                    <!-- partner_id cho BUYER: chỉ-đọc -->
                                    <field name="partner_id" readonly="1"
                                        groups="estate.group_estate_buyer" />
                                    <!-- partner_id cho MANAGER: chỉnh sửa được -->
                                    <field name="partner_id" groups="estate.group_estate_manager" />

                                    <field name="price" />
                                    <field name="validity" />
                                    <field name="deadline" readonly="1" />
                                    <field name="status" readonly="1" />

                                    <button name="action_accept" string="Accept" type="object"
                                        class="oe_highlight"
                                        groups="estate.group_estate_manager"
                                        invisible="['|', ('status','!=', False), ('property_id.state','=','sold')]" />
                                    <button name="action_refuse" string="Refuse" type="object"
                                        class="oe_link"
                                        groups="estate.group_estate_manager"
                                        invisible="['|', ('status','!=', False), ('property_id.state','=','sold')]" />
                                </tree>

                                <!-- Form con (popup) -->
                                <form>
                                    <group>
                                        <field name="property_id" invisible="1" />

                                        <!-- buyer: readonly -->
                                        <field name="partner_id" readonly="1"
                                            groups="estate.group_estate_buyer" />
                                        <!-- manager: editable -->
                                        <field name="partner_id"
                                            groups="estate.group_estate_manager" />

                                        <field name="price" />
                                        <field name="validity" />
                                        <field name="deadline" readonly="1" />
                                        <field name="status" readonly="1" />
                                    </group>
                                    <footer>
                                        <button name="action_accept" string="Accept" type="object"
                                            class="oe_highlight"
                                            groups="estate.group_estate_manager"
                                            invisible="['|', ('status','!=', False), ('property_id.state','=','sold')]" />
                                        <button name="action_refuse" string="Refuse" type="object"
                                            class="oe_link"
                                            groups="estate.group_estate_manager"
                                            invisible="['|', ('status','!=', False), ('property_id.state','=','sold')]" />
                                        <button string="Close" special="cancel" class="oe_link" />
                                    </footer>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <footer>
                    <button name="action_sold" string="Mark as Sold" type="object"
                        class="oe_highlight"
                        groups="estate.group_estate_manager"
                        invisible="[('state','=','sold')]" />
                    <button name="action_cancel" string="Cancel" type="object" class="oe_link"
                        groups="estate.group_estate_manager"
                        invisible="['|', ('state','=','sold'), ('state','=','canceled')]" />
                </footer>
            </form>
        </field>
    </record>
</odoo>