<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree -->
    <record id="view_estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="property_id"/>
                <field name="partner_id"/>
                <field name="price"/>
                <field name="status"/>
                <field name="deadline"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offer">
                <sheet>
                    <group>
                        <group>
                            <field name="property_id"/>

                            <!-- Manager: được chỉnh sửa -->
                            <field name="partner_id" groups="estate.group_estate_manager"/>

                            <!-- Buyer: chỉ xem (chỉ hiện với nhóm buyer) -->
                            <field name="partner_id" groups="estate.group_estate_buyer" readonly="1"/>
                        </group>
                        <group>
                            <field name="price"/>
                            <field name="validity"/>
                            <field name="deadline" readonly="1"/>
                            <field name="status" readonly="1"/>
                        </group>
                    </group>
                </sheet>

                <footer>
                    <button name="action_accept" string="Accept" type="object"
                            class="oe_highlight"
                            groups="estate.group_estate_manager"
                            attrs="{'invisible': ['|', ('status','!=', False), ('property_id.state','=','sold')]}"/>

                    <button name="action_refuse" string="Refuse" type="object"
                            class="oe_link"
                            groups="estate.group_estate_manager"
                            attrs="{'invisible': ['|', ('status','!=', False), ('property_id.state','=','sold')]}"/>

                    <button string="Close" special="cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action + Menu -->
    <record id="action_estate_property_offer" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_estate_offer" name="Offers"
              parent="menu_estate_root" action="action_estate_property_offer" sequence="30"/>
</odoo>
