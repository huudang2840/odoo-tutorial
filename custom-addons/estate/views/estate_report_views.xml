<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Pivot -->
    <record id="view_estate_report_pivot" model="ir.ui.view">
        <field name="name">estate.report.pivot</field>
        <field name="model">estate.report</field>
        <field name="arch" type="xml">
            <pivot string="Estate Analysis" disable_linking="1">
                <!-- Rows -->
                <field name="property_type_id" type="row" />
                <field name="state" type="row" />
                <!-- Columns -->
                <field name="create_date" interval="month" type="col" />
                <!-- Measures -->
                <field name="selling_price" type="measure" />
                <field name="expected_price" type="measure" />
                <field name="best_offer" type="measure" />
                <field name="offer_count" type="measure" />
                <field name="days_to_sell" type="measure" />
            </pivot>
        </field>
    </record>

    <!-- Graph -->
    <record id="view_estate_report_graph" model="ir.ui.view">
        <field name="name">estate.report.graph</field>
        <field name="model">estate.report</field>
        <field name="arch" type="xml">
            <graph string="Estate Trends" type="bar">
                <field name="create_date" interval="month" />
                <field name="selling_price" type="measure" />
                <field name="offer_count" type="measure" />
            </graph>
        </field>
    </record>

    <!-- Tree -->
    <record id="view_estate_report_tree" model="ir.ui.view">
        <field name="name">estate.report.tree</field>
        <field name="model">estate.report</field>
        <field name="arch" type="xml">
            <tree default_order="create_date desc">
                <field name="name" />
                <field name="property_type_id" />
                <field name="state" />
                <field name="expected_price" />
                <field name="best_offer" />
                <field name="selling_price" />
                <field name="offer_count" />
                <field name="days_to_sell" />
                <field name="create_date" />
            </tree>
        </field>
    </record>

    <!-- Search -->
    <record id="view_estate_report_search" model="ir.ui.view">
        <field name="name">estate.report.search</field>
        <field name="model">estate.report</field>
        <field name="arch" type="xml">
            <search string="Search Estate Report">
                <field name="name" />
                <field name="property_type_id" />
                <field name="state" />
                <filter string="This Month" name="this_month"
                    domain="[('create_date','&gt;=', (context_today().strftime('%%Y-%%m-01')))]" />
                <group expand="0" string="Group By">
                    <filter string="Type" name="grp_type" context="{'group_by':'property_type_id'}" />
                    <filter string="State" name="grp_state" context="{'group_by':'state'}" />
                    <filter string="Month" name="grp_month"
                        context="{'group_by':'create_date:month'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Action + Menu -->
    <record id="action_estate_report" model="ir.actions.act_window">
        <field name="name">Estate Reporting</field>
        <field name="res_model">estate.report</field>
        <field name="view_mode">pivot,graph,tree</field>
        <field name="search_view_id" ref="view_estate_report_search" />
        <field name="context">{'search_default_grp_type': 1}</field>
    </record>

    <menuitem id="menu_estate_reporting_root" name="Reporting"
        parent="menu_estate_root" sequence="90" />
    <menuitem id="menu_estate_reporting" name="Estate Analysis"
        parent="menu_estate_reporting_root" action="action_estate_report" sequence="10" />

</odoo>