<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Category -->
    <record id="estate_security_category" model="ir.module.category">
        <field name="name">Estate</field>
        <field name="description">Estate permissions</field>
        <field name="sequence">20</field>
    </record>

    <!-- Groups -->
    <record id="group_estate_manager" model="res.groups">
        <field name="name">Estate Manager</field>
        <field name="category_id" ref="estate.estate_security_category" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>

    <record id="group_estate_buyer" model="res.groups">
        <field name="name">Estate Buyer</field>
        <field name="category_id" ref="estate.estate_security_category" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>

    <!-- Record Rules -->

    <!-- Property Rules -->
    <record id="rule_property_buyer_readonly" model="ir.rule">
        <field name="name">Property - Buyer read only</field>
        <field name="model_id" ref="estate.model_estate_property" />
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('estate.group_estate_buyer'))]" />
        <field name="perm_read" eval="True" />
        <field name="perm_write" eval="False" />
        <field name="perm_create" eval="False" />
        <field name="perm_unlink" eval="False" />
    </record>

    <record id="rule_property_manager_full" model="ir.rule">
        <field name="name">Property - Manager full</field>
        <field name="model_id" ref="estate.model_estate_property" />
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('estate.group_estate_manager'))]" />
        <field name="perm_read" eval="True" />
        <field name="perm_write" eval="True" />
        <field name="perm_create" eval="True" />
        <field name="perm_unlink" eval="True" />
    </record>

    <!-- Offer Rules -->
    <record id="rule_offer_buyer_access" model="ir.rule">
        <field name="name">Offer - Buyer access</field>
        <field name="model_id" ref="estate.model_estate_property_offer" />
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('estate.group_estate_buyer'))]" />
        <field name="perm_read" eval="True" />
        <field name="perm_write" eval="True" />
        <field name="perm_create" eval="True" />
        <field name="perm_unlink" eval="True" />
    </record>

    <record id="rule_offer_manager_full" model="ir.rule">
        <field name="name">Offer - Manager full</field>
        <field name="model_id" ref="estate.model_estate_property_offer" />
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('estate.group_estate_manager'))]" />
        <field name="perm_read" eval="True" />
        <field name="perm_write" eval="True" />
        <field name="perm_create" eval="True" />
        <field name="perm_unlink" eval="True" />
    </record>

    <!-- Type Rules -->
    <record id="rule_type_buyer_readonly" model="ir.rule">
        <field name="name">Type - Buyer read only</field>
        <field name="model_id" ref="estate.model_estate_property_type" />
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('estate.group_estate_buyer'))]" />
        <field name="perm_read" eval="True" />
        <field name="perm_write" eval="False" />
        <field name="perm_create" eval="False" />
        <field name="perm_unlink" eval="False" />
    </record>

    <record id="rule_type_manager_full" model="ir.rule">
        <field name="name">Type - Manager full</field>
        <field name="model_id" ref="estate.model_estate_property_type" />
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('estate.group_estate_manager'))]" />
        <field name="perm_read" eval="True" />
        <field name="perm_write" eval="True" />
        <field name="perm_create" eval="True" />
        <field name="perm_unlink" eval="True" />
    </record>
</odoo>